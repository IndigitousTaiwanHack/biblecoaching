<style>
.table-user-information > tbody > tr {
  border-top: 1px solid rgb(221, 221, 221);
}

.table-user-information > tbody > tr:first-child {
  border-top: 0;
}

.table-user-information > tbody > tr > td {
  border-top: 0;
}

.toppad{
  margin-top:20px;
}

#user-post-list{
  max-height: 80vh;
  overflow: auto;
}
.book-title{
  cursor: pointer;
}
</style>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 toppad" >
      <div class="panel panel-info">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12" align="center">
              <img alt="User Pic" src="http://graph.facebook.com/<%=@current_user.uid%>/picture?type=large" class="usr-img img-responsive">
            </div>
            <div class="col-md-12">
              <table class="table table-user-information">
                <tbody>
                  <tr><td><label>姓名</label></td><td><%=@current_user.name%></td></tr>
                  <tr><td><label>評論獲得按讚數</label></td><td><%= get_post_rank_count(@current_user.id)%></td></tr>
                  <tr><td><label>回覆獲得按讚數</label></td><td><%= get_response_rank_count(@current_user.id)%></td></tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <div dir="rtl"><%= link_to user_post_list_path, class: 'link-delete', :remote => true do %>
                <i class="fa fa-trello" aria-hidden="true">評論紀錄</i>
            <% end %></div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
      <div id="user-post-list">
      </div>
    </div>
  </div>
</div>